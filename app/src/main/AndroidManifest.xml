<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="itreverie.weatherapp" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".main_activity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".detail_activity"
            android:label="@string/title_activity_detail_activity"
            android:parentActivityName=".main_activity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="itreverie.weatherapp.Main_Activity" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".settings_activity"
            android:label="@string/title_activity_settings_activity"
            android:parentActivityName=".main_activity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="itreverie.weatherapp.main_activity" />
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
