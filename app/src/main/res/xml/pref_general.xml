<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="@string/pref_location_key"
        android:title="@string/pref_location_label"
        android:defaultValue="@string/pref_location_default"
        android:inputType="text"
        android:singleLine="true" />

    <!-- NOTE: This preference will be enabled only when the checkbox above is checked. -->
    <ListPreference
        android:key="@string/pref_temperature_key"
        android:title="@string/pref_title_temperature"
        android:entries="@array/pref_temperature_titles"
        android:entryValues="@array/pref_temperature_values"
        android:defaultValue="metric"
        android:negativeButtonText="@string/pref_header_cancel_temperature"
        android:positiveButtonText="@null" />

</PreferenceScreen>
